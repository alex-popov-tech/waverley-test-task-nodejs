{
  "name": "waverley-test-task-nodejs",
  "main": "server/index.js",
  "version": "1.0.0",
  "description": "waverley test task nodejs",
  "engines": {
    "node": "15.x",
    "npm": "7.x"
  },
  "scripts": {
    "clean": "del dist",
    "build-frontend": "NODE_ENV=production webpack -p",
    "build-backend": "NODE_ENV=production babel server --out-dir dist/server && cp -r server/views dist/server/views && cp test_data.csv dist/test_data.csv",
    "build": "npm run clean && npm run build-frontend && npm run build-backend && npm run preparation",
    "preparation": "mkdir -p dist/server; cp -n .env.example .env; cp -r server/views dist/server/views;",
    "start": "NODE_ENV=production node dist/server/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex-popov-tech/waverley-test-task-nodejs.git"
